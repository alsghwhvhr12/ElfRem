<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.elf.remote.viewmodel.my_video.MyVideoViewModel" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/myclipback"
        android:orientation="horizontal"
        android:weightSum="10">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.49" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:orientation="vertical"
            android:weightSum="10">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.29" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.85"
                android:orientation="horizontal"
                android:weightSum="2">


                <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/base"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:background="@drawable/click_my_base"
                    android:onClick="@{()-> viewModel.onBaseDownload()}" />

                <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/list"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:background="@drawable/click_my_vid"
                    android:onClick="@{()-> viewModel.onMovListClick()}" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.37" />

            <Button
                android:id="@+id/selMov"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_weight="1"
                android:background="@drawable/click_my_clsel"
                android:onClick="@{()-> viewModel.onMovSelClick()}" />

            <FrameLayout
                android:id="@+id/frameMov"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/textMov"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="@{viewModel.mov}"
                    android:textColor="#DD00DD" />
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6" />

            <Button
                android:id="@+id/selAud"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_weight="1"
                android:background="@drawable/click_my_audsel"
                android:onClick="@{()-> viewModel.onAudSelClick()}" />

            <FrameLayout
                android:id="@+id/frameAud"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/textAud"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="@{viewModel.aud}"
                    android:textColor="#DD00DD" />
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.51" />

            <Button
                android:id="@+id/clip"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_weight="1.2"
                android:background="@drawable/click_my_clipmk"
                android:onClick="@{()-> viewModel.onClipClick()}" />

        </LinearLayout>
    </LinearLayout>

</layout>