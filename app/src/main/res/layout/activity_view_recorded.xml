<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.elf.remote.viewmodel.view_recorded.ViewRecordedViewModel" />
    </data>


    <FrameLayout
        android:id="@+id/frame1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/editbase"
        bind:viewRMessage="@{viewModel.viewRMessage}">

        <VideoView
            android:id="@+id/vv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="14">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp"
                android:weightSum="5">

                <Button
                    android:id="@+id/listBtn"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/click_gm_list"
                    android:onClick="@{()-> viewModel.onMovClicked()}" />

                <TextView
                    android:id="@+id/videoTxt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@drawable/textview_bg"
                    android:gravity="center"
                    android:text="@string/noVideo"
                    android:textColor="#88FFFF" />

                <Button
                    android:id="@+id/saveVideo"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/click_gm_save"
                    android:onClick="@{()-> viewModel.onSaveFileClicked()}" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp"
                android:weightSum="5">

                <Button
                    android:id="@+id/minus_btn"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/click_gm_minus"
                    android:onClick="@{()-> viewModel.minusClicked()}"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/sink_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@drawable/textview_bg"
                    android:gravity="center"
                    android:text="@string/sinkAudio"
                    android:textColor="#88FFFF"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/plus_btn"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/click_gm_plus"
                    android:onClick="@{()-> viewModel.plusClicked()}"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/hide_btn"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@drawable/click_gm_adhid"
                    android:onClick="@{()-> viewModel.hideClicked()}" />

            </LinearLayout>

            <ImageView
                android:id="@+id/sink_img"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:background="@drawable/gmovaudleft"
                android:visibility="invisible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8" />

            <Button
                android:id="@+id/vidStart"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/click_gm_play"
                android:layout_gravity="center"
                android:onClick="@{()-> viewModel.onStartClicked()}" />


        </LinearLayout>

    </FrameLayout>

</layout>