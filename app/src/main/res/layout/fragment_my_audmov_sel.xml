<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.elf.remote.viewmodel.my_video.MyAudMovViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:id="@+id/seltop"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:background="@drawable/gmovlsttop3"
            android:orientation="vertical"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="0dp"
            android:weightSum="2">

            <Button
                android:layout_width="60dp"
                android:layout_height="0dp"
                android:layout_gravity="end"
                android:layout_weight="0.8"
                android:background="@drawable/click_x_btn"
                android:onClick="@{()->viewModel.onExitClick()}" />

            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:text="@{viewModel.location}"
                android:textColor="#000000" />
        </LinearLayout>

        <ListView
            android:id="@+id/audMovList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7.9"
            android:choiceMode="singleChoice"
            android:listSelector="@drawable/list_sel"
            app:items2="@{viewModel.AudMovFiles}"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:background="@drawable/gmovlstbott"
            android:orientation="horizontal"
            android:weightSum="4">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/click_my_movsel"
                android:onClick="@{()-> viewModel.onSelClick()}" />

            <Button
                android:id="@+id/selpre"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/click_my_clpre"
                android:onClick="@{()-> viewModel.onEditClick()}" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>
</layout>