<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.elf.remote.viewmodel.banjugi.BanListEditViewModel" />
    </data>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_380sdp"
            android:orientation="vertical"
            android:weightSum="10"
            tools:ignore="UselessParent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:scaleType="fitXY"
                android:src="@drawable/bldeltop" />

            <ListView
                android:id="@+id/editDevice"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:choiceMode="singleChoice"
                android:listSelector="@drawable/list_sel" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/bldelbott"
                android:orientation="horizontal"
                android:weightSum="5">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3" />

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/click_bl_del"
                    android:onClick="@{()-> viewModel.onDelClick()}" />

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/click_bl_comple"
                    android:onClick="@{()-> viewModel.onExitClick()}" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</layout>