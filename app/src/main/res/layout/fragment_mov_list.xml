<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.elf.remote.viewmodel.view_recorded.MovListViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/gmovlsttop1"
            android:orientation="vertical"
            android:weightSum="3">

            <Button
                android:layout_width="60dp"
                android:layout_height="0dp"
                android:layout_gravity="end"
                android:layout_weight="0.8"
                android:background="@drawable/click_x_btn"
                android:onClick="@{()->viewModel.onExitClick()}" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1.0"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/click_gm_initem" />

                <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/chgFile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/click_gm_file"
                    android:onClick="@{()-> viewModel.onChgClick()}" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:text="@{viewModel.location}"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="0dp"
                android:textColor="#000000" />

            <CheckBox
                android:id="@+id/mulBtn"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:button="@android:color/transparent"
                android:background="@drawable/click_mul_btn"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_gravity="end"/>
        </LinearLayout>

        <ListView
            android:id="@+id/movList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7.2"
            android:choiceMode="singleChoice"
            android:listSelector="@drawable/list_sel"
            app:items3="@{viewModel.movFiles}"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/click_gm_sel"
                android:onClick="@{()-> viewModel.onSelClick()}" />

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/click_gm_del"
                android:onClick="@{()-> viewModel.onDelClick()}" />

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/click_gm_chg"
                android:onClick="@{()-> viewModel.onEditClick()}" />

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/click_gm_share"
                android:onClick="@{()-> viewModel.onShareClick()}" />

        </LinearLayout>

    </LinearLayout>

</layout>